@import "common.styl"

.main
  width 100%
  height 100%
  position: relative;
  background-image url("../image/bg.jpg")
  background-repeat no-repeat
  background-size 100% 100%
  opacity: .8;
  .login-form
    width: 450px;
    //border: 1px solid;
    padding: 40px 0;
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    top: 40%;
    margin-left: -225px;
    margin-top: -118px;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.51);
    .form-box
      .form-input
        margin-bottom 10px
        .label
          width 65px
          display inline-block
          text-align right
        input
          height 40px
          -webkit-appearance none
          border-radius 4px
          border 1px solid #dcdfe6
          box-sizing border-box
          color #606266
          line-height 1
          outline none
          padding 0 15px
          width 250px
        .msg-info
          color: red;
          font-size: 12px;
          margin-left -85px