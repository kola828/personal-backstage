@import "base/reset.styl"

@font-face {
  font-family: 'iconfont';  /* project id 512372 */
  src: url('//at.alicdn.com/t/font_512372_34oxj02mtum4e7b9.eot');
  src: url('//at.alicdn.com/t/font_512372_34oxj02mtum4e7b9.eot?#iefix') format('embedded-opentype'),
          url('//at.alicdn.com/t/font_512372_34oxj02mtum4e7b9.woff') format('woff'),
          url('//at.alicdn.com/t/font_512372_34oxj02mtum4e7b9.ttf') format('truetype'),
          url('//at.alicdn.com/t/font_512372_34oxj02mtum4e7b9.svg#iconfont') format('svg');
}

.iconfont
  font-family: "iconfont" !important;
  font-size: 15px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
.iconfont
  margin-right: 5px;
  width: 24px;
  text-align: center;
  font-size: 18px;
  vertical-align: middle;

$blue=#409eff
$yellow =#E6A23C
$yellow-h=#f5b452
$nav-g=#545c64
$border-g= #a8acb3


//页面公共样式
html, body, #app,.content
  width 100%
  height 100%
  overflow: hidden;
  .header-nav
    width 100%
    height 80px
    background-color $nav-g
    color white
    .h-title
      float left
      margin-left 20px
      font-size 30px
      line-height 80px
    .h-right
      float right
      margin-right 50px
      margin-top 15px
      .h-img
        display inline-block
        margin-right 10px
        img
          height 50px
          width 50px
          border-radius 25px
          vertical-align middle
    &::after
      content ''
      clear both
  .wrap
    width 100%
    height 100%
    .nav-left
      //display inline-block
      float left
      width 310px
      height 100%
      border-top: 1px white solid
      .el-menu
        height 100%
    .main
      //display inline-block
      margin-left 310px
      //vertical-align top


//定义按钮公共样式
button
  background $yellow
  border: 1px solid $yellow;
  color: white;
  text-align: center;
  box-sizing: border-box;
  outline: none;
  padding: 8px 20px;
  border-radius: 4px;
  margin-top 15px
//重置ElementUI弹框按钮样式
.el-button--primary
  background-color: $yellow;
  border-color: $yellow;
.el-button--primary:focus, .el-button--primary:hover
  background: $yellow-h;
  border-color: $yellow-h;
.el-button:hover
  color: $yellow;
  border-color: $yellow;
  background-color: #fdf0dc;
.el-dialog__headerbtn:focus .el-dialog__close, .el-dialog__headerbtn:hover .el-dialog__close
  color: $yellow;



